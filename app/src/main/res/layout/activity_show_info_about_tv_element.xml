<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Really_Really_Dark_Gray"
    android:paddingBottom="20dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Really_Really_Dark_Gray"
        tools:context="com.example.simone.whatwatch.ShowInfoAboutListElement"
        android:id="@+id/tv_series_layout">

        <ImageView
            android:id="@+id/poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/creators"
            android:layout_marginStart="23dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@color/colorPrimary" />

        <TextView
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="false"
            android:layout_marginTop="32dp"
            android:text="Titolo"
            android:textAlignment="center"
            android:textColor="@color/WhiteSmoke"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/Overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Overview"
            android:textColor="@color/WhiteSmoke"
            android:textSize="18sp"
            android:layout_below="@+id/genres"
            android:layout_alignStart="@+id/genres" />

        <Button
            android:id="@+id/add_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/Overview"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="74dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/button_selector"
            android:text="+"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/year"
            android:layout_alignTop="@+id/poster"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="100dp"
            android:text="rating"
            android:textSize="36sp" />

        <!--<ListView
            android:id="@+id/season_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@id/genres"
            android:layout_below="@+id/Overview"
            android:layout_marginTop="68dp"
            android:isScrollContainer="false" />-->

        <TextView
            android:id="@+id/genres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/poster"
            android:layout_below="@+id/poster"
            android:text="TextView"
            android:textColor="@color/WhiteSmoke"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/creators"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/WhiteSmoke" />

        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="11dp"
            android:text="TextView"
            android:textColor="@color/WhiteSmoke"
            android:textSize="36sp"
            android:layout_above="@+id/scale"
            android:layout_toEndOf="@+id/poster"
            android:layout_marginStart="38dp" />

        <Button
            android:id="@+id/youtube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to Youtube"
            android:layout_alignBottom="@+id/poster"
            android:layout_alignStart="@+id/runtime" />

        <CheckBox
            android:id="@+id/seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/add_button"
            android:layout_alignEnd="@+id/add_button"
            android:layout_marginBottom="80dp"
            android:text="Seen"
            android:clickable="false"
            android:textColor="@color/WhiteSmoke" />

        <TextView
            android:id="@+id/runtime"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="TextView"
            android:textColor="@color/WhiteSmoke"
            android:textSize="36sp"
            android:layout_below="@+id/rating"
            android:layout_alignStart="@+id/rating" />

        <TextView
            android:id="@+id/scale"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/rating"
            android:layout_toEndOf="@+id/rating"
            android:text="/10"
            android:textColor="@color/WhiteSmoke"
            android:textSize="36sp" />

    </RelativeLayout>
</ScrollView>